<resources>

    <!-- Common Name Define -->
    <attr name="roundCorner" format="dimension"/>
    <attr name="noCache" format="boolean"/>
    <attr name="imageUrl" format="string"/>
    <attr name="autoLoad" format="boolean"/>
    <attr name="fadeIn" format="boolean"/>
    <attr name="imgBoxWidth" format="dimension"/>
    <attr name="imgBoxHeight" format="dimension"/>
    <attr name="defaultImgRes" format="reference"/>
    <attr name="defaultBgRes" format="reference"/>
    <attr name="errorImgRes" format="reference"/>
    <attr name="errorBgRes" format="reference"/>

    <declare-styleable name="RemoteImageView">
        <attr name="imageUrl" />
        <attr name="autoLoad" />
        <attr name="fadeIn" />
        <attr name="imgBoxWidth" />
        <attr name="imgBoxHeight" />
        <attr name="roundCorner" />
        <attr name="noCache" />
        <attr name="defaultImgRes" />
        <attr name="defaultBgRes" />
        <attr name="errorImgRes" />
        <attr name="errorBgRes" />
        <attr name="pinchZoom" format="boolean" />
        <attr name="showProgress" format="boolean" />
        <attr name="indeterminateDrawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="ResImageView">
        <attr name="imageUrl" />
        <attr name="autoLoad" />
        <attr name="fadeIn" />
        <attr name="imgBoxWidth" />
        <attr name="imgBoxHeight" />
        <attr name="roundCorner" />
        <attr name="noCache" />
        <attr name="defaultImgRes" />
        <attr name="defaultBgRes" />
        <attr name="errorImgRes" />
        <attr name="errorBgRes" />
    </declare-styleable>
</resources>
